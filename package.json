  "repository": {
    "type": "git",
    "url": "https://github.com/Lakesideglamping/lakeside-retreat-website.git"
  },
  "bugs": {
    "url": "https://github.com/Lakesideglamping/lakeside-retreat-website/issues"
  },
  "homepage": "https://lakesideretreat.co.nz",
  "security": {
    "contact": "security@lakesideretreat.com",
