{
  "name": "lakeside-retreat-backend",
  "version": "1.0.0",
  "description": "Backend system for Lakeside Retreat booking platform - Security Enhanced",
  "main": "server-secure.js",
  "scripts": {
    "start": "node server-render.js",
    "start:secure": "node server-secure.js",
    "dev": "nodemon server-secure.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:fix-force": "npm audit fix --force",
    "security-check": "npm audit && npm outdated",
    "security-update": "npm update && npm audit fix",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linter specified\" && exit 0",
    "logs": "tail -f logs/combined.log",
    "security-logs": "tail -f logs/security.log"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
